<link rel="stylesheet" href="/stylesheets/navbar.css">

<nav class="navbar">
    <div class="navbar-container">
        <!-- Brand Logo (Left) -->
        <div class="navbar-logo">
            <span class="navbar-brand">JEWEL</span>
        </div>

        <!-- Navbar Links (Center) -->
        <ul class="navbar-links">
            <li><a href="/">Home</a></li>
            <li><a href="/Billing">Billing</a></li>
            <li><a href="/pleged">History</a></li>
        </ul>

        <!-- Profile Section & Buttons (Right) -->
        <div class="navbar-cta">
            <% if (!user) { %>  
                <!-- Show Sign In only if user is NOT logged in -->
                <button type="button" onclick="window.location.href='/signup'">Sign In</button>
            <% } %>

            <% if (user) { %>
                <!-- Show Logout only if user IS logged in -->
                <a href="/logout" class="logout-btn">Logout</a>
            <% } %>
        </div>

        <% if (user) { %>
            <div class="navbar-profile">
                <a href="/profile">
                    <img src="/images/logo.png" alt="Profile Picture" class="profile-pic">
                </a>
            </div>
        <% } %>
    </div>
</nav>

