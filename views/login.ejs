<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Exquisite Access</title>
    <link rel="stylesheet" href="/stylesheets/login.css">
</head>

<body>

    <div class="login-container">
        <h2>Welcome Back</h2>
        <p class="subtitle">Unlock timeless elegance</p>

        <div id="flash-container">
            <% if (error_msg) { %>
                <div class="flash-popup error"><%= error_msg %></div>
            <% } %>
            <% if (success_msg) { %>
                <div class="flash-popup success"><%= success_msg %></div>
            <% } %>
        </div>
        

        <form id="login-form" action="/login" method="post">
            <div class="input-group">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" required>
            </div>
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Login</button>
        </form>

        <p class="signup-link">New here? <a href="/signup">Create an account</a></p>
    </div>
    <script>
        // Wait for the DOM to load
        document.addEventListener("DOMContentLoaded", function () {
            const flashMessage = document.querySelector(".flash-popup");
            if (flashMessage) {
                setTimeout(() => {
                    flashMessage.style.display = "none";
                }, 3000); // 3 seconds delay
            }
        });
    </script>
    
</body>

</html>
